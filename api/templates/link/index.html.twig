{% extends 'base.html.twig' %}

{% block body %}
  <div class="row">
    <div class="col s12 right-align">
      <a class="waves-effect waves-light btn" href="{{ path('link_new') }}">
        <i class="material-icons left">playlist_add</i>
        Novo
      </a>
    </div>
  </div>


  {% for link in links %}
    {% if loop.first or loop.index % 3 == 0 %}
      <div class="row">
      {% endif %}
      <div class="col s4">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              <a href="{{ link.url }}">{{ loop.index }}
                -
                {{ link.name }}</a>
            </span>
            <p>{{ link.description }}</p>
          </div>
          <div class="card-action">
            <a class="btn" href="{{ path('link_edit', {'id': link.id}) }}">
              <i class="material-icons">
                edit
              </i>
            </a>
            {{ include('link/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
      {% if loop.last or loop.index % 3 == 0 %}
      </div>
    {% endif %}
  {% else %}
    <div class="row">
      <div class="col s12">
        <div class="card-panel yellow lighten-4 center-align">
          <p>
            <i class="material-icons">
              speaker_notes_off
            </i>
          </p>
          <p>no records found</p>
        </div>
      </div>
    </div>
  {% endfor %}

{% endblock %}
